<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#eeeeee">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You are logged in with\n 7894585652"
        android:id="@+id/textView27"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:textColor="#5fc676"
        android:background="@android:drawable/picture_frame"
        android:padding="15dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/logout_button"
        android:layout_below="@+id/textView27"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#5fc676"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout_button"
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="35dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Saved Address"
        android:id="@+id/savedadress_text"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/new_address_button"
        android:src="@drawable/plus_orange"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
       />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/saved_address_list"
        android:dividerHeight="2dp"
        android:divider="@null"
        android:layout_below="@+id/relativeLayout2"></ListView>
</RelativeLayout>
