<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#b0ffffff"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:id="@+id/offline_store_image"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/store"
        android:scaleType="fitXY"
        android:background="@android:drawable/picture_frame" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Marathahalli"
        android:id="@+id/offline_store_area"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/offline_store_image"
        android:layout_toRightOf="@+id/offline_store_image"
        android:layout_toEndOf="@+id/offline_store_image"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:layout_marginRight="15dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#444444" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="#56, 5th Cross, Ashwath Nagar\nMarathahalli\nBangalore - 560037"
        android:id="@+id/offline_store_address"
        android:layout_below="@+id/offline_store_area"
        android:layout_alignLeft="@+id/offline_store_area"
        android:layout_alignStart="@+id/offline_store_area"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="#444444" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Timings : 9am to 10pm"
        android:id="@+id/offline_store_timmings"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/offline_store_address"
        android:layout_alignLeft="@+id/offline_store_address"
        android:layout_alignStart="@+id/offline_store_address"
        android:textSize="13sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact No. : 7894561233"
        android:id="@+id/offline_stores_contact"
        android:textSize="13sp"
        android:layout_below="@+id/offline_store_timmings"
        android:layout_alignLeft="@+id/offline_store_timmings"
        android:layout_alignStart="@+id/offline_store_timmings"
        android:layout_marginTop="3dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:id="@+id/call_store_button"
        android:layout_below="@+id/offline_stores_contact"
        android:layout_alignLeft="@+id/offline_stores_contact"
        android:layout_alignStart="@+id/offline_stores_contact"
        android:textAllCaps="false"
        android:textSize="12sp"
       android:drawableLeft="@android:drawable/ic_menu_call"
        android:background="#5fbd5a"
        android:text="Call"
        android:textColor="@color/white"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:clickable="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/direction_button_offline"
        android:background="#5fbd5a"
        android:text="Directions"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:drawableLeft="@android:drawable/ic_menu_directions"
        android:layout_alignTop="@+id/call_store_button"
        android:layout_toRightOf="@+id/call_store_button"
        android:layout_toEndOf="@+id/call_store_button"
        android:textColor="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:clickable="true"
        />

</RelativeLayout>