<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/veg2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/startup_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/fzgrey"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FarmZop"
        android:id="@+id/textView21"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:layout_below="@+id/startup_logo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_background_gradient"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/initial_address_selection"
        android:background="#7f000000"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/startup_city_selection_spinner"
            android:background="@drawable/dropdown_spinner"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/startup_area_selection_spinner"
            android:layout_below="@+id/startup_city_selection_spinner"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/dropdown_spinner"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:background="#c62e0c"
            android:text="Start Shopping"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/startup_area_selection_spinner"
            android:layout_marginTop="25dp"
            android:id="@+id/start_shopping_button" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="By continuing, you agree to the Privacy Policy and Terms and Conditions"
        android:textColor="#ffffff"
        android:id="@+id/textView17"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blackgradient"
        android:paddingRight="7dp"
        android:paddingLeft="7dp" />




</RelativeLayout>